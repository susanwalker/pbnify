<p class="font-sans text-5xl text-gray-800 text-center">
  Welcome to PBNify!
</p>

<br />

<hr class="border-b m-0" />

<br />

<p class="font-sans text-3xl text-gray-800 text-center">
  Upload an image for PBNification
</p>

<br />

<% if @request.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @request.errors.full_messages.each do |msg| %>
      <li class="text-red-500"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="flex justify-center">
  <%= form_for @request, html: { class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' } do |f| %>
    <div class="mb-4">
      <!-- Credit for input image: https://codepen.io/shuvroroy/pen/VEJGpX -->
      <label class="w-64 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue hover:text-white">
        <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
        </svg>

        <span class="mt-2 text-base leading-normal">Input File</span>
        <%= f.file_field :input_image, id: 'request_input_image', class: 'hidden' %>
      </label>
    </div>

    <div class="flex items-center justify-center">
      <%= f.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>
</div>
